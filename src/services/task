import axios from 'axios';

const API_URL = '/api'; // Adjust as needed

export const getTasks = async () => {
  return axios.get(`${API_URL}/tasks`);
};

export const createTask = async (taskData: any) => {
  return axios.post(`${API_URL}/tasks`, taskData);
};

export const updateTask = async (taskId: number, taskData: any) => {
  return axios.put(`${API_URL}/tasks/${taskId}`, taskData);
};

export const deleteTask = async (taskId: number) => {
  return axios.delete(`${API_URL}/tasks/${taskId}`);
};

export const addSubtask = async (taskId: number, subtaskData: any) => {
  return axios.post(`${API_URL}/tasks/${taskId}/subtasks`, subtaskData);
};

export const getSubtasks = async (taskId: number) => {
    return axios.get(`${API_URL}/tasks/${taskId}/subtasks`);
};